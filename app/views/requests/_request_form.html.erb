<%= form_for [@recruitment, @request] do |f| %>
  <div class="form-group">
    <%= f.label :name, "代表者名"%><br/>
    <%= f.text_field :name, autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :group_name, "グループネーム"%><br/>
    <%= f.text_field :group_name, autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "備考欄", class: "form-control" %>
  </div>
  <%= f.submit "応募する", class: "btn btn-primary" %>
<% end %>
