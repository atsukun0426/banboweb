<%= form_for(@recruitment) do |f| %>
  <!---%= render 'shared/error_messages', object: f.object %--->
  <div class="form-group">
    <%= f.label :title, "タイトル"%><br/>
    <%= f.text_field :title, autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :date, "開催日時", class: "control-label" %><br/>
    <%= f.date_field :date, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :price, "出演料", class: "control-label" %><br/>
    <%= f.text_field :price, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "コメントを入力して下さい。", class: "form-control" %>
  </div>
  <%= f.submit "募集する", class: "btn btn-primary" %>
<% end %>
