<%= form_tag(recruitments_path, :method => "get") do %>
 <%= text_field_tag :search %>
<%= submit_tag "検索" ,:title => nil ,class: "button is-info"%>
<% end %>

<% @recruitments.each do |recruitment| %>
  <div class="list-group">
    <%= link_to recruitment.title, recruitment, class: "list-group-item list-group-item-action" %>
  </div>
<% end %>
