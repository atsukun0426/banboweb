<div class="py-4">
  <section id="user">
    <div class="container">
      <div class="row">
        <div class="thumbnail">
          <% if @user.image.present?%>
            <%= image_tag @user.image.url(:thumb), calss: "img-thumbnail"%>
          <% else %>
            <%= image_tag("/images.jpg", :alt => "画像準備中", class: "img-fluid") %>
        　 <% end %>
        </div>
        <div class="col-md-8">
          <h4><%= @user.name %></h4>
          <p><%=@user.description %></p>
          <audio src= "<%= "#{@user.music}" %>" controls="">
            <a src="<%= "#{@user.music}" %>">ダウンロード</a>
          </audio>
        </div>
        </div>
        <div class="row">
          <div class="col-md-10 py-4">
            <% if current_user.id == @user.id %>
              <a href="<%= edit_user_registration_path %>" class="btn btn-info">プロフィール編集</a>
              <a href="<%= new_post_path %>" class="btn btn-info">投稿する</a>
              <% if current_user.organizer %>
                <a href="<%= new_recruitment_path %>" class="btn btn-info">出演募集する</a>
                <a href="<%= recruitments_path %>" class="btn btn-info">募集一覧</a>
              <% end %>
            <% end %>
            <% if current_user != @user %>
              <a href="<%= chat_path(@user.id) %>" class="btn btn-info">チャットを始める</a>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <% if @user.posts.any? %>
              <ul class="list-unstyled">
                <%= render @posts %>
              </ul>
              <%= paginate(@posts) %>
            <% end %>
          </div>
        </div>
    </div>
  </section>
</div>
